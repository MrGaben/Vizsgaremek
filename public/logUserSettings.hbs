                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
            </ul>
    </div >
    
    {{!-- Body --}}


<script>
function enableField(fieldId) {
    const field = document.getElementById(fieldId);
    field.disabled = false;
    field.focus();
    document.getElementById('submitBtn').style.display = 'block'; // Mutassuk meg a submit gombot
}
</script>

<style>
    .form-control {
        width: 300px; /* Változtasd meg az igényeidnek megfelelően */
        flex-grow: 1; /* Egyenlő szélesség biztosítása */
    }
    .gray-icon {
        color: gray; /* Szürke ikon szín */
    }

    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 1rem; /* Az egyes mezők közötti távolság */
    }
    .form-label {
        width: 120px; /* Rögzített szélesség a címkékhez */
    }
    .form-control {
        flex-grow: 1; /* Kitölti a fennmaradó helyet */
        margin-right: 10px; /* Távolság a gombtól */
    }
</style>


</body>
