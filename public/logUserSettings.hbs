<body>
    {{!-- Navigation links --}}
    <nav>
        <h4>Node MySQL Login</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/logUserSettings">User Settings</a></li>
        </ul>
    </nav>


<div class="area" >
            <ul class="circles">
                    
<div class="container mt-5 context" id="bg">
    <div class="mt-4 p-5 text-grey rounded">
        <h1 style="text-align: center; color:white;">Felhasználói adatok</h1>
    </div>
    
    {{#if message}}
        <div class="alert alert-info">{{message}}</div>
    {{/if}}

    <form action="/auth/updateUser" method="POST" class="mt-4">
        <div class="mb-3 d-flex align-items-center">
            <label for="email" class="form-label me-2" style="color:white;">Email</label>
             <input type="email" class="text" id="email" name="email" style="font-family:'Courier New', Courier, monospace; color:white;" placeholder="E-mail" value="{{user.email}}" disabled required>
            
            <button type="button" class="btn btn-link text-muted" onclick="enableField('email')">
                <i class="bi bi-pencil gray-icon" style="color: rgb(255, 255, 255);"></i>
            </button>
        </div>
        <div class="mb-3 d-flex align-items-center">
            <label for="name" class="form-label me-2" style="color:white;">Name</label>
            <input style="font-family:'Courier New', Courier, monospace; color:white;" type="text" class="text" id="name" name="name" placeholder="Név" value="{{user.name}}" disabled required>
            <button type="button" class="btn btn-link text-muted" onclick="enableField('name')">
                <i class="bi bi-pencil gray-icon" style="color: rgb(255, 255, 255);"></i>
            </button>
        </div>
        <div class="mb-3 d-flex align-items-center">
            <label for="address" class="form-label me-2" style="color:white;">Address</label>
            <input style="font-family:'Courier New', Courier, monospace; color:white;" type="text" class="text" id="address" name="address" placeholder="Lakcím" value="{{user.address}}" disabled required>
            <button type="button" class="btn btn-link text-muted" onclick="enableField('address')">
                <i class="bi bi-pencil gray-icon" style="color: rgb(255, 255, 255);"></i>
            </button>
        </div>
        <div class="mb-3 d-flex align-items-center">
            <label for="phonenumber" class="form-label me-2" style="color:white;">Phone Number</label>
            <input style="font-family:'Courier New', Courier, monospace; color:white;" type="text" class="text" id="phonenumber" name="phonenumber"placeholder="Telefonszám" value="{{user.phonenumber}}" disabled required>
            <button type="button" class="btn btn-link text-muted" onclick="enableField('phonenumber')">
                <i class="bi bi-pencil gray-icon" style="color: rgb(255, 255, 255);"></i>
            </button>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success" style="display: none;" id="submitBtn">Frissítés</button>
        </div>
    </form>

    <form method="GET" action="/logout" style="margin-left: 64dvw;">
        <button type="submit" style="background-color: transparent; border: none;">
            <i class="fas fa-sign-out-alt" style="color: rgb(255, 255, 255); font-size: 24px;"></i>
        </button>
    </form>
</div>
