    {{!-- Body--}}
    <div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="#">
			<h1>Create Account</h1>
			<div class="social-container">
			</div>
			<span>or use your email for registration</span>
			<input type="text" placeholder="Name" />
			<input type="email" placeholder="Email" required/>
			<input type="password" placeholder="Password" />
			<button>Sign Up</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form action="/auth/login" method="POST">
			<h1>Bejelentkezés</h1>
			<br>
			<label for="email-lgn" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="email-lgn" name="email" required>  
			<label for="password-lgn" class="form-label">jelszó</label>
            <input type="password" class="form-control" id="password-lgn" name="password" required>
            <br>
            <a href="/forgotPass" class=" text-black" style=" color: black; text-decoration:none;">Elfelejtette a jelszavat?</a>
			<button id="signIn">Bejelentkezés</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right">
				<h1>Nincs fiókja?</h1>
				<a href="/register" class=" text-white btn border border-3 border-white rounded-pill w-25 p-3" id="signUp">Regisztrálok</a>
			</div>
		</div>
	</div>
</div>
    
